<div class="row">
  <div class="col-xs-12">
    <%= form_for(@curso, html: { class: "form-horizontal" }) do |f| %>
      <div class="form-group">
        <%= f.label :nome, class: "col-xs-2 control-label" %>
        <div class="col-xs-8">
          <%= f.text_field :nome, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :valor_inscricao, class: "col-xs-2 control-label" %>
        <div class="col-xs-8">
          <%= f.text_field :valor_inscricao, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :periodo, class: "col-xs-2 control-label" %>
        <div class="col-xs-8">
          <%= f.select :periodo, options_for_select(@periodo_options_for_select), {}, { class: 'form-control' } %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
          <%= f.submit t('buttons.save'), class: "btn btn-default" %>
          <%= link_to t('buttons.back'), cursos_path, class: "btn btn-default"%>
        </div>
      </div>

      <% if @curso.errors.any? %>
        <div id="error_explanation" class="alert alert-danger col-xs-offset-1 col-xs-10" role="alert">
          <ul>
          <% @curso.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

    <script type="text/javascript">
      $(".form-group:has(.field_with_errors)").addClass("has-error");
    </script>
  </div>
</div>
